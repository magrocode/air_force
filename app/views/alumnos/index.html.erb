<h1>Listing alumnos</h1>

<table>
  <tr>
    <th>Rut</th>
    <th>Numero empleado</th>
    <th>Apellido Paterno</th>
    <th>Apellido Materno</th>
    <th>Nombres</th>
    <th>Fecha nacimiento</th>
    <th>Fecha ingreso</th>
    <th>Fecha egreso</th>
    <th>Direccion particular</th>
    <th>Telefono fijo</th>
    <th>Telefono celular</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @alumnos.each do |alumno| %>
  <tr>
    <td><%= alumno.rut %></td>
    <td><%= alumno.numero_empleado %></td>
    <td><%= alumno.apellido_paterno %></td>
    <td><%= alumno.apellido_materno %></td>
    <td><%= alumno.nombres %></td>
    <td><%= alumno.fecha_nacimiento %></td>
    <td><%= alumno.fecha_ingreso %></td>
    <td><%= alumno.fecha_egreso %></td>
    <td><%= alumno.direccion_particular %></td>
    <td><%= alumno.telefono_fijo %></td>
    <td><%= alumno.telefono_celular %></td>
    <td><%= alumno.email %></td>
    <td><%= link_to 'Show', alumno %></td>
    <td><%= link_to 'Edit', edit_alumno_path(alumno) %></td>
    <td><%= link_to 'Destroy', alumno, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

